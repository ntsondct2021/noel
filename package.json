
{
  "name": "noel-ai-magic-studio",
  "private": true,
  "version": "1.0.0",
  "description": "Ứng dụng biến hình ảnh thành phong cách Giáng Sinh bằng AI",
  "main": "main.js",
  "type": "module",
  "author": {
    "name": "Noel AI Studio",
    "email": "contact@noelai.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build-exe": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "lucide-react": "^0.468.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.6.3",
    "vite": "^6.0.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.noelai.magicstudio",
    "productName": "Noel AI Studio",
    "copyright": "Copyright © 2024 Noel AI Studio",
    "directories": {
      "output": "dist-exe"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Noel AI Studio",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "publish": null
  }
}
